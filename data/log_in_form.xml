<odoo>
    <template id="login_form" name="Login Form">
        <t t-call="website.layout">
            <div class="container">
                <section class="bagcolor"
                         t-attf-style="background-image: url('../College/static/src/img/prime.jpeg');min-height: 700px;">
                    <form action="/login/resuser" method="post">
                        <table class="color" style="width: 200px" align="center" padding="40px">
                            <tr>
                                <td>
                                    <label style="color: white">User Name:</label>
                                    <input type="text" palceholder="user name" name="name"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label style="color: white">Password:</label>
                                    <input type="password" palceholder="password" name="gender"/>
                                </td>
                            </tr>
                            <tr>
                                <td align="center" padding="10px">
                                    <button type="submit" name="login_submit">log in</button>
                                </td>
                            </tr>
                        </table>
                    </form>
                </section>
            </div>
        </t>
    </template>
</odoo>